//find length of the string
#include <iostream>
using namespace std;

int getlength(char ch[]){
    int c=0;
    for(int i=0;ch[i]!='\0';i++){
        c++;
    }
    return c;
}

int main(){
    char ch[10];
    cin>>ch;
    cout<<"length is :" <<getlength(ch);
    
  return 0;
}

//reverse of a string

#include <iostream>
#include <vector>
using namespace std;
void reverse(char name[],int length){
  int s=0;
  int e=length-1;
  while(s<e){
    swap(name[s++],name[e--]);
  }
}

int main(){
   char name[20];
   cout<<"enter your name";
   cin>>name;
   int length=0;
   for(int i=0;name[i] !='\0';i++){
    length++;
   }
   reverse(name ,length);
   cout<<name<<endl;

  return 0;
}
