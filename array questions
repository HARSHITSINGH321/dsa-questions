//find an element from the array
#include <iostream>
using namespace std;
bool searchkey(int arr[],int size,int key){
  for(int i=0;i<size;i++){
    if(arr[i]==key){
      return 1;
    }
  }
   return 0;
}
 
int main(){
   int arr[10]={1,4,8,9,7,12,67,98,34};
   int key;
   cin>>key;

   bool found= searchkey(arr,10,key);
   if(found){
   cout<<"element is present"<<endl;
   }
   else{
    cout<<"element is not present"<<endl;
   }
  return 0;
}
//reverse the element of the array
#include <iostream>
using namespace std;
void reversearr(int arr[],int size){
  int start=0;
  int end=size-1;
  while(start<=end){
     swap(arr[start],arr[end]);
     start++;
     end--;
  }
}
  void printarray(int arr[],int size){
    for(int i=0;i<size;i++){
      cout<<arr[i];
    }
  }
 
int main(){
   int arr[6]={1,2,3,4,5,6};
   reversearr(arr,6);
   printarray(arr,6);
  return 0;
}

//intersection of arrays
#include <iostream>
using namespace std;
 
int main(){
   int arr[6]={1,2,3,4,5,6};
   int crr[5]={2,2,3,3,5,};
   int i=0;
   int j=0;

   while(i<6 && j<5){
      if(arr[i]==crr[j]){
        cout<<arr[i];
        i++;
        j++;
      }
      else if(arr[i]>crr[j]){
        j++;
      }
      else if(arr[i]<crr[j]){
        i++;
      }
      else{
      return 0;}
   }

  
  
  return 0;
}
