#include <iostream>
#include <math.h>
using namespace std;
 //decimal to binary
int main(){
    int n;
    cin>>n;
    int i=0;
    int ans=0;
    while(n){
       int bit=n & 1;
       ans=bit*pow(10,i) + ans;
         i++;
         n=n>>1;

    }

   cout<<ans<<endl;

    return 0;
}  

//binary to decimal

int main(){
    int n;
    cin>>n;
    int i=0,ans=0;
    while(n){
        int digit=n%10;
        ans=digit*pow(2,i)+ans;
        i++;
        n=n/10;
    }
      cout<<ans<<endl;
      return 0;
}
 //reverse a number in the integer range

#include <iostream>
#include <math.h>
using namespace std;
 
int main(){
    int n;
    cin>>n;
    int ans=0;
    while(n){
        if(ans==INT_MAX/10 || ans==INT_MIN/10){
            return 0;
        }
        else{
        int lastdigit=n%10;
        ans=ans*10+lastdigit;
        n=n/10;}
    }
    cout<<ans<<endl;
  return 0;
}

